<Window x:Class="OneClickRunner.Windows.AppItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Application" Height="350" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Name:" Grid.Row="0" Margin="0,0,0,5"/>
        <TextBox Name="NameTextBox" Grid.Row="0" Margin="0,20,0,5"/>

        <TextBlock Text="Path to executable or script:" Grid.Row="1" Margin="0,10,0,5"/>
        <Grid Grid.Row="1" Margin="0,30,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Name="PathTextBox" Grid.Column="0"/>
            <Button Name="BrowseButton" Content="Browse..." Grid.Column="1" Width="80" Margin="5,0,0,0" Click="BrowseButton_Click"/>
        </Grid>

        <TextBlock Text="Arguments (optional):" Grid.Row="2" Margin="0,10,0,5"/>
        <TextBox Name="ArgumentsTextBox" Grid.Row="2" Margin="0,30,0,5"/>

        <TextBlock Text="Working Directory (optional):" Grid.Row="3" Margin="0,10,0,5"/>
        <Grid Grid.Row="3" Margin="0,30,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Name="WorkingDirectoryTextBox" Grid.Column="0"/>
            <Button Name="BrowseWorkingDirButton" Content="Browse..." Grid.Column="1" Width="80" Margin="5,0,0,0" Click="BrowseWorkingDirButton_Click"/>
        </Grid>

        <CheckBox Name="RunAsAdminCheckBox" Content="Run as Administrator" Grid.Row="4" Margin="0,10,0,5"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="OkButton" Content="OK" Width="80" Margin="0,0,10,0" Click="OkButton_Click" IsDefault="True"/>
            <Button Name="CancelButton" Content="Cancel" Width="80" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
